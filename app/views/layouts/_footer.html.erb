<footer class="footer">
  <div class="container">
    <div class="row footer-wrapper">
      <div class="col-md-4">
        <h2><%= t('footer.company') %></h2>
        <ul class="footer-links">
          <li><%= link_to t('menu.about'), empresa_path, :"data-no-turbolink" => true, class: "footer-link"%></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h2><%= t('footer.contacts') %></h2>
        <ul class="footer-links">
          <li><%= link_to t('call'), contacts_path, :"data-no-turbolink" => true, class: "footer-link"%></li>
          <li><%= link_to t('footer.map'), info_path, :"data-no-turbolink" => true, class: "footer-link"%></li>
        </ul>
      </div>
      <div class="col-md-4">
        <h2> <%= t('menu.languages.lang') %></h2>
         <ul class="footer-links">
            <li>
              <span class="footer-flag"><%= image_tag("pt.png") %></span> <%= link_to t('menu.languages.pt'), change_locale_path(:pt), class:"footer-link region",  :"data-no-turbolink" => true %>
            </li>
            <li>
              <span class="footer-flag"><%= image_tag("en.png") %></span> <%= link_to t('menu.languages.en'), change_locale_path(:en), class:"footer-link region en",  :"data-no-turbolink" => true %> 
            </li>
          </ul>
      </div>
    </div>
  </div>
  <div class="container-fluid madeby">
    <div class="row">
      <div class="col-md-8 col-sm-12">
       <p class="copyrights"> &copy; <%= t('footer.rights') %> <%= Time.now.year %> - NGS Malhas </p>
      </div>
      <div class="col-md-4 col-sm-12">
        <p class="text-center"><%= t('footer.madeby') %><a class="madeby-link" id="good" href="http://diogomartf.github.io/">Diogo Ferreira</a></p>
      </div>
    </div>
  </div>
</footer>
<script type="text/javascript">
    mixpanel.track_links("#good", "d-link", {
        "referrer": document.referrer
    });
</script>